<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adesc062.uottawa.ca.tournamentdesigner" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/thirteenth_attempt"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateTournamentActivity"
            android:label="@string/title_activity_create_tournament"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.EditTeamActivity"
            android:label="EditTeam"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.FlagSelectionActivity"
            android:label="@string/title_activity_flag_selection"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.RoundActivity"
            android:label="@string/title_activity_round"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.MatchViewActivity"
            android:label="@string/title_activity_match_view"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.StandingsActivity"
            android:label="@string/title_activity_standings"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.LoadTournamentActivity"
            android:label="@string/title_activity_load_tournament"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/title_activity_help_page"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
        <activity
            android:name=".activities.MatchesActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" />
    </application>

</manifest>