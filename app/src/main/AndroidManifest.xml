<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adesc062.uottawa.ca.tournamentdesigner" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/tournament_designer_logo_lowres"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustNothing"
            android:configChanges="keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateTournamentActivity"
            android:label="@string/title_activity_create_tournament"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.EditTeamActivity"
            android:label="EditTeam"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.FlagSelectionActivity"
            android:label="@string/title_activity_flag_selection"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.RoundActivity"
            android:label="@string/title_activity_round"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.MatchViewActivity"
            android:label="@string/title_activity_match_view"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.StandingsActivity"
            android:label="@string/title_activity_standings"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.LoadTournamentActivity"
            android:label="@string/title_activity_load_tournament"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.MatchesActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.DropboxSyncActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="nosensor"/>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:configChanges="orientation|keyboard">
            <intent-filter>
                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-drnhvv07gtk5pvu" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>


</manifest>