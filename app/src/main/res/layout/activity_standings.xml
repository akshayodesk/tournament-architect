<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StandingsActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Standings"
            android:id="@+id/standingsTextView"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_weight="0.07" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#f51616"
            android:layout_weight="0.7">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:layout_weight="0.8"
                android:layout_margin="5sp">

                <ListView
                    tools:listitem="@android:layout/simple_list_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/standingsListView"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:layout_margin="5sp" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="View Rounds"
            android:id="@+id/viewRoundsButtonTextView"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.08"
            android:onClick="viewRoundsOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Delete Tournament"
            android:id="@+id/deleteTournamentButton"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.08"
            android:onClick="deleteTournamentOnClick" />

    </LinearLayout>

</RelativeLayout>
