<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/standingsText"
            android:id="@+id/standingsTextView"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#E48700" />

        <ListView
            tools:listitem="@android:layout/simple_list_item_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/standingsListView"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:layout_weight="0.7"
            style="@style/ListViewHoloColors"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="View Rounds"
            android:id="@+id/viewRoundsButtonTextView"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:layout_weight="0.1"
            android:onClick="viewRoundsOnClick"
            style="@style/ButtonHoloColors"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Delete Tournament"
            android:id="@+id/deleteTournamentButton"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:layout_weight="0.1"
            android:onClick="deleteTournamentOnClick"
            style="@style/ButtonHoloColors"/>

    </LinearLayout>

</RelativeLayout>
