<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DropboxSyncActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Dropbox Sync"
            android:id="@+id/loadTournamentTextView"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:textSize="22sp"
            android:layout_weight="1"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#E48700" />

        <ToggleButton
            style="@style/ToggleHoloColors"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textOff="Activate Sync"
            android:textOn="Deactivate Sync"
            android:id="@+id/activationToggleButton"
            android:onClick="activationToggleButtonOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Log In"
            android:id="@+id/logInButton"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="2"
            android:onClick="logInOnClick"
            android:singleLine="false"
            style="@style/ButtonHoloColors" />

        <Button
            style="@style/ButtonHoloColors"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Log Out"
            android:id="@+id/logOutButton"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="2"
            android:onClick="logOutOnClick"
            android:singleLine="false" />

    </LinearLayout>
</RelativeLayout>
