<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/loadTournamentText"
            android:id="@+id/loadTournamentTextView"
            android:layout_gravity="center_horizontal"
            android:autoText="true"
            android:textSize="28sp"
            android:layout_weight="0.1"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#E48700" />

        <ListView
            tools:listitem="@android:layout/simple_list_item_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tournamentsListView"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:layout_weight="0.7"
            style="@style/ListViewHoloColors" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/deleteText"
            android:id="@+id/deleteAndDoneTournamentButton"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:layout_weight="0.1"
            android:onClick="deleteAndDoneTournamentOnClick"
            style="@style/ButtonHoloColors"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="@string/dropboxSyncText"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:layout_weight="0.1"
            android:onClick="dropboxSyncOnClick"
            android:nestedScrollingEnabled="true"
            style="@style/ButtonHoloColors"/>

    </LinearLayout>
</RelativeLayout>
