<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTeamActivity"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Change Logo"
            android:id="@+id/logoTextView"
            android:textSize="22sp"
            android:layout_weight="0.1"
            android:gravity="bottom|center" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/teamLogoImageView"
            android:src="@drawable/twelth_attempt"
            android:layout_weight="0.4"
            android:clickable="false"
            android:onClick="logoOnClick"
            android:focusable="false"
            android:tag="logoImageViewTag"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/teamNameEditText"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:textSize="22sp"
            android:gravity="bottom|center_horizontal"
            android:maxLength="20"
            android:hint="Team Name" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Save Team"
            android:id="@+id/saveTeamButton"
            android:background="#E48700"
            android:textColor="#ffffff"
            android:layout_weight="0.1"
            android:textSize="18sp"
            android:onClick="saveOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Delete Team"
            android:id="@+id/deleteTeamButton"
            android:background="#E48700"
            android:textColor="#ffffff"
            android:layout_weight="0.1"
            android:textSize="18sp"
            android:onClick="deleteOnClick" />

    </LinearLayout>
</RelativeLayout>
