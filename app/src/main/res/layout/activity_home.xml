<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:background="#ffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Tournament Designer"
            android:id="@+id/tournamentDesignerTextView"
            android:textSize="22sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.08" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/logoImageView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tournament_designer_logo"
            android:layout_weight="0.55"
            android:background="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="New Tournament"
            android:id="@+id/newTournamentButton"
            android:layout_gravity="center_vertical"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:layout_weight="0.10"
            android:textSize="18sp"
            android:onClick="newTournamentOnClick"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Load Tournament"
            android:id="@+id/loadTournamentButton"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.10"
            android:onClick="loadTournamentOnClick"/>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.025" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Help"
                android:id="@+id/helpButton"
                android:layout_gravity="center_vertical"
                android:background="#f51616"
                android:textColor="#ffffff"
                android:layout_weight="0.3"
                android:textSize="18sp"
                android:clickable="true"
                android:onClick="helpButtonOnClick"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
