<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teamNameForStandingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="left|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3sp"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:text="Argentina" />

        <ImageView
            android:id="@+id/teamLogoForStandingsImageView"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="2sp"
            android:src="@drawable/argentina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins:"
            android:id="@+id/winsIndicatorTextView"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:id="@+id/numberOfWinsTextView"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_vertical|center|center_horizontal|right" />

    </LinearLayout>

</TableLayout>