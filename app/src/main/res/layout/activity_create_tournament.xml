<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTournamentActivity"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:background="#ffffff">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/tournamentNameEditText"
            android:textSize="18sp"
            android:layout_weight="0.08"
            android:gravity="bottom"
            android:hint="Tournament Name" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:background="#f51818">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="#ffffff"
                android:layout_margin="5sp">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/teamsListView"
                    tools:listitem="@android:layout/simple_expandable_list_item_1"
                    android:textSize="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Add Team"
            android:id="@+id/addTeamButton"
            android:layout_gravity="center_vertical"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:layout_weight="0.06"
            android:textSize="18sp"
            android:onClick="addTeamTournamentOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/formatTypeRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Round Robin"
                    android:id="@+id/roundRobinRadioButton"
                    android:checked="true"
                    android:textSize="18sp"
                    android:buttonTint="#f51818"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:button="@drawable/theme_btn_radio_holo_light" />
"
                    android:onClick="roundRobinOnClick" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Knockout"
                    android:id="@+id/knockoutRadioButton"
                    android:checked="false"
                    android:textSize="18sp"
                    android:buttonTint="#f51818"
                    android:layout_weight="1"
                    android:button="@drawable/theme_btn_radio_holo_light"
                    android:onClick="knockoutRobinOnClick" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Combination"
                    android:id="@+id/combinationRadioButton"
                    android:checked="false"
                    android:textSize="18sp"
                    android:buttonTint="#f51818"
                    android:layout_weight="1"
                    android:button="@drawable/theme_btn_radio_holo_light"
                    android:onClick="combinationRobinOnClick" />
            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="# Round Robin Rounds:"
                    android:id="@+id/numRoundsTextView"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5sp" />

                <Space
                    android:layout_width="4sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numRoundsEditText"
                    android:layout_weight="0"
                    android:text="1"
                    android:textSize="15sp"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Save Changes"
            android:id="@+id/saveTournamentButton"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.06"
            android:onClick="saveOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Delete Tournament"
            android:id="@+id/deleteTournamentButton"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.06"
            android:onClick="deleteOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Start Tournament"
            android:id="@+id/startTournamentButton"
            android:background="#f51616"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.06"
            android:onClick="startOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

    </LinearLayout>

</RelativeLayout>
