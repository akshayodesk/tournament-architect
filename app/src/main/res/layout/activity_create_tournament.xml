<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTournamentActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:background="#ffffff">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/tournamentNameEditText"
            android:textSize="18sp"
            android:layout_weight="0.1"
            android:hint="Tournament Name"
            android:gravity="bottom|center_horizontal" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Teams"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#E48700">
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/teamsListView"
            tools:listitem="@android:layout/simple_expandable_list_item_1"
            android:textSize="10dp"
            android:layout_weight="0.32" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09">

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Add Team"
                android:id="@+id/addTeamButton"
                android:layout_gravity="center_vertical"
                android:background="#E48700"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="addTeamTournamentOnClick" />

            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Format"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#E48700" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/formatTypeRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Round Robin"
                    android:id="@+id/roundRobinRadioButton"
                    android:checked="true"
                    android:textSize="18sp"
                    android:buttonTint="#E48700"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:onClick="roundRobinOnClick"
                    android:button="@drawable/custom_radio_button_btn_radio_holo_light" />
"
                    android:onClick="roundRobinOnClick" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Knockout"
                    android:id="@+id/knockoutRadioButton"
                    android:checked="false"
                    android:textSize="18sp"
                    android:buttonTint="#E48700"
                    android:layout_weight="1"
                    android:onClick="knockoutRobinOnClick"
                    android:button="@drawable/custom_radio_button_btn_radio_holo_light" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" Combination"
                    android:id="@+id/combinationRadioButton"
                    android:checked="false"
                    android:textSize="18sp"
                    android:buttonTint="#E48700"
                    android:layout_weight="1"
                    android:onClick="combinationRobinOnClick"
                    android:button="@drawable/custom_radio_button_btn_radio_holo_light" />
            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="# Round Robin Circuits:"
                    android:id="@+id/numRoundsTextView"
                    android:textSize="18sp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5sp" />

                <Space
                    android:layout_width="10sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numRoundsEditText"
                    android:layout_weight="0"
                    android:text="1"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:gravity="bottom" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Delete Tournament"
            android:id="@+id/deleteTournamentButton"
            android:background="#E48700"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.09"
            android:onClick="deleteOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:text="Start Tournament"
            android:id="@+id/startTournamentButton"
            android:background="#E48700"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="0.09"
            android:onClick="startOnClick" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02" />

    </LinearLayout>

</RelativeLayout>
